<p id="notice"><%= notice %></p>
<table class="table">
<h1>Coins</h1>
</table>
<table class="table table-bordered">
  <% @enrique = Coin.countries.keys %>
  <thead>
    <tr>
      <th scope="col">
        <form url = "<%= collection_coins_path(@collection) %>" method = "GET"> 
        <%= select_tag :country, options_for_select(Coin.countries.keys), :onchange => 'showCountry()' %>
        <button type="submit"> Enviar </button>
        </form>
      </th> 
      <th scope="col"> Year   </th>
      <th scope="col">  2  </th> 
      <th scope="col">  1  </th> 
      <th scope="col">  0,5  </th>
      <th scope="col">  0,2  </th>
      <th scope="col">  0,1  </th>
      <th scope="col">  0,05  </th>
      <th scope="col">  0,02  </th>
      <th scope="col">  0,01  </th>
      <th scope="col">Totalcoin</th>
      <th scope="col">Sumtotalcoin</th>
  </thead>

      <% for i in Coin.introducedeuros[params[:country].downcase]..Date.current.year %> 
      <tr>
          <td> <%= params[:country] %> </td>
          <td> <%= i %> </td>
          </tr> 
      </td>
    </tr>
    <% end %>

    <% @coin.each do |coin| %>
      <tr>
        <td> <%= coin.country %>  
        <%= coin.year %>
          <%= coin.value %> 
          <%= link_to 'Edit', edit_collection_coin_path(coin.collection, coin) %> 
          <%= link_to 'Destroy', collection_coin_path(coin.collection, coin), method: :delete, data: { confirm: 'Are you sure?' } %> </td>
      </tr>
      <% end %>

  </tbody>
</table>
<br>

<%= link_to 'New Coin', new_collection_coin_path(@collection) %>
