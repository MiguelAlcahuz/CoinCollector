<h1 class="formattitle">Collections</h1>
<body style="background-color:#d5dadc">
	
	<table class="table table-bordered">
	        
	<tr>	
	<td class="formatsubheader"> CURRENCY </td>
	<td class="formatsubheader"> OPTIONS </td>
	</tr>
	    		<% @collections.each do |collection|  %>
	    		<tr>
	        		<td class="formatcontent"> <%= collection.currency %></td>
	        		<td class="formatcontent"> <%= link_to 'My coins', collection_coins_path(collection) %> | <%= link_to 'Edit', edit_collection_path(collection) %> | <%= link_to 'Destroy', collection, method: :delete, data: { confirm: 'Are you sure?' } %>  </td>
	        </tr>
			
	    <% end %>
	</table>

	<p class="logcontent">
	<%= link_to 'New Collection', new_collection_path, {:style => 'color:#00a7cc'} %>
	</p>
	<% if user_signed_in? %>
	  <p class="logcontent">
	  <%= link_to 'Logout', destroy_user_session_path, method: :delete,  :style => 'color:#00a7cc'  %>
	  <%#= ", " + current_user.username %>
	  </p>
	  <% end %>
</body>





