<p id="notice"><%= notice %></p>

<h1>Collections</h1>
<table>
  <thead>
    <tr>
      <th scope="col"> Currency </th>
      <th scope="col"> Total of Coins </th>
      <th scope="col"> Total Value of Coins </th>
      
    </tr>
  </thead>

  <tbody>
    <% @collections.each do |collection|  %>
      <tr>
        <td><%= @collection.currency %></td>
        <td><%= @collection.totalcoin%></td>
        <td><%= @collection.sumtotalcoin%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Collection', new_collection_path %>

<br>
<% @collections.each do |collection| %>
<%= link_to 'Show', collection %>
<%= link_to 'Edit', edit_collection_path(collection) %>
<%= link_to 'Destroy', collection, method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'My coins', collection_coins_path(collection) %>
<%end%>

